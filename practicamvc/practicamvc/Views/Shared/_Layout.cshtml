<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - productos Manager</title>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.11.1/font/bootstrap-icons.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />

    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --glass-bg: rgba(255, 255, 255, 0.1);
            --glass-border: rgba(255, 255, 255, 0.2);
            --shadow-soft: 0 8px 32px rgba(0, 0, 0, 0.1);
            --shadow-hover: 0 12px 48px rgba(0, 0, 0, 0.15);
            --sidebar-width: 280px;
        }

        * {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        }

        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            margin: 0;
            padding-left: var(--sidebar-width);
        }

        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: var(--sidebar-width);
            height: 100vh;
            background: var(--glass-bg);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border-right: 1px solid var(--glass-border);
            box-shadow: var(--shadow-soft);
            z-index: 1000;
            padding: 2rem 0;
        }

        .sidebar-brand {
            color: white;
            font-weight: 700;
            font-size: 1.5rem;
            text-decoration: none;
            padding: 0 2rem;
            margin-bottom: 3rem;
            display: flex;
            align-items: center;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
        }

        .sidebar-brand:hover {
            color: #f8f9fa;
        }

        .sidebar-nav {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .sidebar-nav .nav-item {
            margin-bottom: 0.5rem;
        }

        .sidebar-nav .nav-link {
            color: white;
            text-decoration: none;
            padding: 1rem 2rem;
            display: flex;
            align-items: center;
            font-weight: 500;
            transition: all 0.3s ease;
            border-radius: 0 25px 25px 0;
            margin-right: 1rem;
        }

        .sidebar-nav .nav-link:hover {
            background: var(--glass-bg);
            color: #f8f9fa;
            transform: translateX(10px);
        }

        .sidebar-nav .nav-link.active {
            background: rgba(255, 255, 255, 0.2);
            color: white;
        }

        .sidebar-nav .nav-link i {
            margin-right: 1rem;
            font-size: 1.2rem;
        }

        .main-content {
            padding: 2rem;
            min-height: 100vh;
        }

        .main-container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            box-shadow: var(--shadow-soft);
            padding: 2rem;
            transition: all 0.3s ease;
        }

        .main-container:hover {
            box-shadow: var(--shadow-hover);
            transform: translateY(-2px);
        }

        .card-modern {
            border: none;
            border-radius: 16px;
            box-shadow: var(--shadow-soft);
            transition: all 0.3s ease;
            overflow: hidden;
            background: white;
        }

        .card-modern:hover {
            box-shadow: var(--shadow-hover);
            transform: translateY(-4px);
        }

        .btn-modern {
            border-radius: 12px;
            padding: 0.75rem 1.5rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
            border: none;
            position: relative;
            overflow: hidden;
        }

        .btn-primary-modern {
            background: var(--primary-gradient);
            color: white;
        }

        .btn-primary-modern:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-hover);
        }

        .footer-modern {
            background: var(--glass-bg);
            backdrop-filter: blur(20px);
            border: 1px solid var(--glass-border);
            border-radius: 20px 20px 0 0;
            margin-top: 3rem;
            padding: 2rem;
            color: white;
            text-align: center;
        }

        .footer-modern a {
            color: white;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .footer-modern a:hover {
            color: #f8f9fa;
            text-decoration: underline;
        }


        .animate-fade-in {
            animation: fadeInUp 0.6s ease-out;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <a class="sidebar-brand" asp-area="" asp-controller="Home" asp-action="Index">
            <i class="bi bi-palette-fill me-2"></i>
            Pagina de pedidos 
        </a>

        <ul class="sidebar-nav">
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-house-door-fill"></i>
                    Inicio
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Clientes" asp-action="Index">
                    <i class="bi bi-people-fill"></i>
                    Clientes
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Productos" asp-action="Index">
                    <i class="bi bi-box-seam-fill"></i>
                    Productos
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Pedidos" asp-action="Index">
                    <i class="bi bi-cart-fill"></i>
                    Pedidos
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="DetallePedidos" asp-action="Index">
                    <i class="bi bi-list-ul"></i>
                    Detalle Pedidos
                </a>
            </li>
        </ul>
    </div>

    <div class="main-content">
        <div class="main-container animate-fade-in">
            <main role="main">
                @RenderBody()
            </main>
        </div>

        <footer class="footer-modern">
            <div class="container text-center">
                &copy; 2025 - Artesanías Manager
            </div>
        </footer>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>